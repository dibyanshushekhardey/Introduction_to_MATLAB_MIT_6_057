function smoothed = rectFilt(x, width)
    if mod(width, 2) == 0
        disp("Width has to be add! making it")
        width = width + 1;
    end;
    size_1 = (width - 1)/2;
    for n = 1:length(x)
        if n < size_1 & n > length(x) - size_1
            smoothed(n) = mean(x(max(1, n - size_1):min(length(x), n + size_1)));
        else
            smoothed(n) = mean(x(n - size_1:n + size_1));
        end
    end
end
